<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    xmlns:sf="sap.ui.layout.form"
    height="100%"
    controllerName="zdashboard.controller.FilesDetail"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        enableLazyLoading="true"
    >
        <!-- Header -->
        <headerTitle>
            <ObjectPageHeader
                id="ObjectPageHeader"
                objectTitle="{DocumentHeaderText}"
                
                objectSubtitle="{CompanyCode}"
            >
      
              <actions>
					<m:Button text="Edit" type="Emphasized" press="onEdit" visible="{=! ${filesDetailView>/editable}}"/>
                    <m:Button text="Save" type="Emphasized" press="onSave" visible="{filesDetailView>/editable}"/>
					<m:Button text="Delete"/>
					<m:Button text="Copy"/>
					<m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
				</actions>
               	

            </ObjectPageHeader>
            	
        </headerTitle>

        <!-- Header Content -->
        <headerContent>

            <layout:VerticalLayout>
               <m:ObjectStatus title="Admin Data" />
               <m:ObjectStatus title="Company Code" id="CompCode" text="{companyCode}"/>
               <m:ObjectStatus title="Gross Amount" id="FiscalYear" text="{fiscalYear}"/>
                <m:ObjectStatus title="Create By" id="CreatedBy"  text="{senderMail}" />
               <m:ObjectStatus title="Invoice Number" id="InvoiceNumber" text="{documentId}"/>
                <m:ObjectStatus title="Status"  id="Status"  text="{Status}" />
          
				
				
                <!-- <m:Label text="Company Code" labelFor="CompCode" />
                <m:Text id="CompCode" text="{companyCode}" />
           
                <m:Label text="Gross Amount" labelFor="FiscalYear" />
                <m:Text id="FiscalYear"   />

                <m:Label text="Create By" labelFor="CreatedBy" />
                <m:ObjectAttribute id="CreatedBy" text="{senderMail}" />

                <m:Label text="Invoice Number" labelFor="InvoiceNumber" />
                <m:Text id="InvoiceNumber" text="{documentId}" />

                <m:Label text="Status" labelFor="Status" />
                <m:Text id="Status" text="{Status}" /> -->
                
            </layout:VerticalLayout>
        </headerContent>

        <!-- Sections -->
        <sections>
            <!-- General Info -->
            <ObjectPageSection
                title="General Information"
                titleUppercase="false"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <sf:SimpleForm editable="true">
                                <m:Label text="Company Code" />
                                <m:Input value="{CompanyCode}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{CompanyCode}" />

                                <m:Label text="Fiscal Year" />
                                <m:Input value="{fiscalYear}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{fiscalYear}" />

                                <m:Label text="Document Date" />
                                <m:DatePicker
                                    value="{documentDate}"
                                    displayFormat="long" visible="{filesDetailView>/editable}"
                                />
                                <m:Text text="{documentDate}" />

                                <m:Label text="Posting Date" />
                                <m:DatePicker
                                    value="{postingDate}"
                                    displayFormat="long" visible="{filesDetailView>/editable}"
                                />
                                <m:Text text="{postingDate}" />

                                <m:Label text="Supplier Invoice Party" />
                                <m:Input value="{supInvParty}"  visible="{filesDetailView>/editable}"/>
                                <m:Text text="{supInvParty}" />

                                <m:Label text="Invoicing Party" />
                                <m:Input value="{supInvParty}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{supInvParty}" />
                            </sf:SimpleForm>
                        </blocks>
                         <blocks>
                            <sf:SimpleForm editable="true">
                                <m:Label text="Currency" />
                                <m:Input value="{documentCurrency}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{documentCurrency}" />

                                <m:Label text="Gross Amount" />
                                <m:Input value="{invGrossAmount}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{invGrossAmount}" />

                                <m:Label text="Accounting Document Type" />
                                <m:Input value="{AccountingDocumentType}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{AccountingDocumentType}" />

                                <m:Label text="Invoicing Party" />
                                <m:Input value="{InvoicingParty}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{InvoicingParty}" />
                                

                                <m:Label text="Document Header Text" />
                                <m:Input value="{DocumentHeaderText}" visible="{filesDetailView>/editable}" />
                                <m:Text text="{DocumentHeaderText}" />

                              
                            </sf:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <!-- Item Details -->
            <ObjectPageSection
                title="Item Details"
                titleUppercase="false"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:Table
                                id="ItemTable"
                                items="{to_InvoiceItem}"
                                inset="false"
                            >
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Purchase Order" />
                                    </m:Column>
                                     <m:Column>
                                        <m:Text text="Unit of Measure" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Quantity" />
                                    </m:Column>
                                      <m:Column>
                                        <m:Text text="Invoice Item" />
                                    </m:Column>
                                      <m:Column>
                                        <m:Text text="Invoice Item Amount" />
                                    </m:Column>
                                       <m:Column>
                                        <m:Text text="Plant" />
                                    </m:Column>
                                       <m:Column>
                                        <m:Text text="Product Type" />
                                    </m:Column> 
                                    <m:Column>
                                        <m:Text text="Tax Jurisdicary" />
                                    </m:Column> 
                                    <m:Column>
                                        <m:Text text="Amount" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Tax Code" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:Input value="{PurchaseOrder}" />
                                           <m:Input value="{PurchaseOrder}" />
                                        <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                         <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                         <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                         <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                         <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                         <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                         <m:Input
                                            value="{Quantity}"
                                            type="Number"
                                        />
                                        
                                        <m:Input
                                            value="{Amount}"
                                            type="Number"
                                        />
                                        <m:Input value="{TaxCode}" />
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <!-- Logs -->
            <ObjectPageSection
                title="Invoice Logs"
                titleUppercase="false"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:List items="{to_InvoiceLogs}">
                                <m:items>
                                    <m:StandardListItem title="{Message}" />
                                </m:items>
                            </m:List>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                title="Attachment"
                titleUppercase="false"
            >
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:List items="{to_InvoiceLogs}">
                                <m:items>
                                    <m:StandardListItem title="{Message}" />
                                </m:items>
                            </m:List>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>

{
  "name": "dashboards",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.13.8",
    "@cap-js/audit-logging": ">=0",
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/connectivity": "^3.9.0",
    "@sap-cloud-sdk/generator": "^3.16.0",
    "@sap-cloud-sdk/http-client": "^3.16.0",
    "@sap-cloud-sdk/resilience": "^3.9.0",
    "@sap-cloud-sdk/util": "^3.16.0",
    "@sap/cds-hana": "^2",
    "@sap/eslint-plugin-cds": "^3.0.3",
    "@sap/ux-cds-odata-language-server-extension": "^1.12.0",
    "@sap/xsenv": "^5.2.0",
    "@sap/xssec": "^4",
    "and": "^0.0.3",
    "axios": "^1.6.4",
    "capval": "^2.0.5",
    "ci": "^2.3.0",
    "dotenv": "^16.3.1",
    "express": "^4",
    "mbt": "^1.2.28",
    "npm": "^11.1.0",
    "passport": "^0",
    "querystring": "^0.2.1"
  },
  "peerDependencies": {
    "@sap/cds": "^8.9.4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/eslint-plugin-cds": "^3",
    "@sap/ui5-builder-webide-extension": "^1.1.9",
    "@sap/ux-ui5-tooling": "1",
    "@ui5/cli": "^3.0.0",
    "cds-plugin-ui5": "^0.9.3",
    "cds-swagger-ui-express": "^0.10.0",
    "rimraf": "^3.0.2",
    "ui5-task-zipper": "^3.1.3"
  },
  "scripts": {
    "start": "cds-serve",
    "cds": "npm i @sap/cds",
    "undeploy": "cf undeploy dashboards --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "clean": "rimraf \"**/*mta_archives\" \"**/*gen\" \"**/*resources\" \"**/*dist\" \"**/*node_modules\" \"**/*package-lock.json\"",
    "watch-dashboard": "cds watch --open dashboard/webapp/index.html?sap-ui-xx-viewCache=false",
    "all": "npm run clean && npm run cds && npm run build && npm run deploy",
    "hybrid": "cds watch --profile hybrid",
    "kill": "lsof -i :4004 | grep LISTEN | awk '{print $2}' | xargs kill -9 || echo 'No process running on port 4004'"
  },
  "cds": {
    "fiori": {
      "lean_draft": true,
      "bypass_draft": true
    },
    "requires": {
      "[development]": {
        "kind": "sqlite",
        "auth": "dummy",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": "memory"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "[hybrid]": {
        "db": "hana",
        "auth": "dummy"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/dashboard"
  ]
}
